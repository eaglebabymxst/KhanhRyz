#include <iostream>
using namespace std;
int main()
{
    float tg,ls,kv;
    int i=0;
    cout<<"nhap vao so tien , lai xuat, so tien ky vong ";
    cin>>tg>>ls>>kv;
    while(tg<0||ls<0||kv<0)
    {
        cout<<"ban da nhap sai xin moi nhap lai"<<endl;
        cout<<"nhap vao so tien , lai xuat, so tien ky vong ";
        cin>>tg>>ls>>kv;
    }
    while (tg <= kv)
				{
					tg+=(tg*ls)/100;
					i++;
				}
                    cout<<"sau "<<i<<" nam thi ban da nhan duoc so tien la "<<kv;
}

